<div class="banner">
  <h1>My lists</h1>
</div>

<div class="container">
  <div class="lists-title mt-3 mb-3">
    <div>
      <h2>Every list you created</h2>
    </div>
    <div>
      <%= link_to "Add a new list", new_list_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-sm-12 col-md-6 col-lg-4 lists-card mb-3">
        <%= link_to list do %>
            <%= image_tag list.photos %>
            <h3><%= list.name %></h3>
        <% end %>
      </div>
    <% end %>

    </div>
  </div>
</div>
